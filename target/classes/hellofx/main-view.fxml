<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.StackPane?>


<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hellofx.Controller">

 <center>

<!-- SplitPane trennt links (Simulation) und rechts (Dashboard) -->
    <SplitPane dividerPositions="0.4">
       
        <StackPane>

              <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
              </padding>

         
            <!-- Linker Bereich: SUMO -->
              <VBox fx:id="simulationContainer"
                  style="-fx-background-color: #27ac5dff;"
                  prefWidth="400" spacing="10">
                  
                  <children>
                    <Label text="SUMO Simulation"
                           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                </children>
              </VBox>
            
         </StackPane>  
  
    <!-- Obere rechte Ecke -->
     <BorderPane>
        <top>
          <VBox alignment="TOP_RIGHT" spacing="10">
             <children>
              <!-- Grüner Button -->
              <Button text="Start Simulation"
                     onAction="#onStartSimulation"
                     style="-fx-background-color: green; -fx-text-fill: white;"/>

              <!-- Roter Button -->
              <Button text="Stop Simulation"
                     onAction="#onStopSimulation"
                     style="-fx-background-color: red; -fx-text-fill: white;"/>

              <!-- Weißer Button -->
              <Button text="Reset Button"
                     onAction="#onResetSimulation"
                     style="-fx-background-color: white; -fx-text-fill: black;"/>



                <!-- Textblock "Simulationszeit" Anfang -->
              <VBox spacing="5"
                  alignment="TOP_RIGHT"
                  style="-fx-background-color: #e0e0e0; -fx-padding: 10; -fx-background-radius: 5;"
                  maxWidth="150">
                  <children>
                      <Label text="Simulationszeit" style="-fx-font-size: 12px;"/>
                      <Label fx:id="timeLabel" text="00:00:00"
                        style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                   </children>
               </VBox> 
                <!-- Textblock "Timer" Ende-->

                <!-- Weißer Button Einstellungen-->
                <Button text="Erweiterte Einstellungen" 
                        fx:id="settingsButton"
                        onAction="#toggleAdvancedSettings"
                        style="-fx-background-color: white; -fx-text-fill: black;"/>

                        <!-- Optionen Erweiterte Einstellungen Panel -->
                        <VBox fx:id="advancedSettingsBox"
                              spacing="5"
                              visible="false"
                              managed="false"
                              style="-fx-background-color: #6db969ff; -fx-padding: 10; -fx-background-radius: 4;"
                              maxWidth="180">

                         <children>
                             <Label text="Erweiterte Optionen"
                                    style="-fx-font-size: 12px; -fx-font-weight: white;" />

                             <Button text="Option A" />
                             <Button text="Option B" />
                             
                         </children>
                        </VBox>

             </children>

             <!-- Geschwindigkeitsstatistikfeld -->
                <VBox spacing="5"
                      alignment="TOP_RIGHT"
                      style="-fx-background-color: #3ad1a3ff; -fx-padding: 10; -fx-background-radius: 5;"
                      maxWidth="180">

                 <children>
                 <Label text="Geschwindigkeitstatistik"
                        style="-fx-font-size: 12px; -fx-font-weight: bold;"/>

                 <Label fx:id="maxSpeedLabel"
                        text="Max: 0 km/h"
                        style="-fx-font-size: 13px;" />

                 <Label fx:id="avgSpeedLabel"
                        text="Average: 0 km/h"
                        style="-fx-font-size: 13px;" />
                 </children>
               </VBox>

                <!-- Fahrzeugstatistikfeld -->
                <VBox spacing="5"
                      alignment="TOP_RIGHT"
                      style="-fx-background-color: #3ad1a3ff; -fx-padding: 10; -fx-background-radius: 5;"
                      maxWidth="180">

                 <children>
                 <Label text="Fahrzeugstatistik"
                        style="-fx-font-size: 12px; -fx-font-weight: bold;"/>

                 <Label text="Simulierter Fahrzeuge:"
                        style="-fx-font-size: 13px;" />

                 <Label text="Fahrzeuge im Stau: "
                        style="-fx-font-size: 13px;" />

                 </children>
               </VBox>

             <padding> 
                <Insets top="55" right="10" bottom="10" left="10"/> 
             </padding>
        </VBox>
     </top>


    <!-- Anzeige Live Sumo Connection -->
                 <center>
                   <Label fx:id="label" text="Sumo"/>
                   
                   <Label text="Verbindung:" style="-fx-font-size: 12px; -fx-font-weight: bold;" />

                   <Label fx:id="connectionStatusLabel"
                        text="Nicht verbunden"
                        style="-fx-font-size: 13px; -fx-text-fill: red;" />
                </center>
       </BorderPane>

      </SplitPane>  

   </center>

</BorderPane>   
